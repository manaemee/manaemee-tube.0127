mixin video(video)
    div.video-mixin
        div.video-mixin__row
            div.video-mixin__info
                div
                    img(src=video.owner.avatar)
                    a(href=`/users/${video.owner._id}`)=video.owner.username
                div 
                    small=video.hashtags 
                    h1=video.title
                    span views #{video.views}
            if String(video.owner._id) === String(loggedInUser._id)
                div.video-mixin__link
                    a(href=`/videos/${video.id}/edit`)
                        span Edit
                    a(href=`/videos/${video.id}/delete`)   
                        span Delete
        video(src="/"+video.fileUrl, controls, width=650 data-videoId=video._id)     
        //div 
            button.play Play 
            button.mute Mute
            span.time 00:00 / 00:00
            input(type="range", step="0.1" min="0" max="1").volume
        div.video-mixin__row
            p=video.description
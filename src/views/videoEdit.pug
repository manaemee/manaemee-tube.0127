extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Title", value=video.title, required, type="text", maxlength="10" name="title")
        input(placeholder="Description", value=video.description, required, type="text", minlength="10" name="description")
        input(placeholder="Hashtags, separated by comma.", value=video.hashtags.join(), required, type="text", name="hashtags")
        input(type="submit", value="Edit your Video")
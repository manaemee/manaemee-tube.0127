extends base

block content
    h1=pageTitle
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="username", placeholder="username", type="text", required, maxlength="10")
        input(name="password", placeholder="password", type="password", required, minlength="5")
        input(type="submit", value="login")
        a(href="/users/github/start") Continue with Github &rarr;
        a(href="/users/kakao/start") Continue with KaKao &rarr;
    hr
    div
        a(href="/join") 
            span Create Account  &rarr; 